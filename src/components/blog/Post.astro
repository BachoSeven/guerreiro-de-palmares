---
const { postData } = Astro.props;
import PublishDate from "./PublishDate.astro";
---
<article
    class="lg:mb-[100px] mb-10 prose lg:prose-xl max-w-none 
    prose-headings:font-bold prose-headings:text-tailblog-accent 
    prose-p:text-tailblog-primary/70 lg:prose-p:text-[18px] prose-p:transition-all prose-p:duration-300 
    prose-a:font-semibold prose-a:text-tailblog-dark prose-a:hover:text-tailblog-pink prose-a:no-underline prose-a:transition-all prose-a:duration-300
    prose-strong:font-normal 
    prose-headings:font-tailblog-space prose-h2:mb-7
    dark:prose-a:text-white dark:prose-a:hover:text-tailblog-accent dark:prose-p:text-white/70"
>
    <h2>
        <a href={ '/blog/' + postData.slug } class="text-tailblog-dark hover:text-tailblog-accent  ">{ postData.data.title }</a>
    </h2>

    <p>
        { postData.data.intro }
    </p>

    <p class="flex flex-row flex-wrap gap-5 items-center font-tailblog-space mt-5">
        { postData.data.tag &&
        <span class="group text-[16px] relative inline-block bg-tailblog-accent/60 rounded-tl-[10px] rounded-br-[10px] px-3 text-white">
            {postData.data.tag}
        </span>
        }
    
        <PublishDate date={postData.data.pubDate} />
    </p>
</article>
